<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBBF8F0"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/paramsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/paramsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/InitVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/initial_voltage"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/initialVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/HiVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hiV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/high_voltage"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/highVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LoVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/low_voltage"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/lowVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/volts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FinVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/finV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/final_voltage"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/finalVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/volt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ScanRateGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scR8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/scan_rate"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/scanRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/v_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v_s"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SweepSegsGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sweepSegs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sweep_segments"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/sweepSegments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/IntervalGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sampInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sample_interval"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/sampleInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/sample_volts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textColor="@android:color/black" />
            </LinearLayout>
<!--
            <LinearLayout
                android:id="@+id/QuietTimeGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quiTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/quiet_time" />

                <EditText
                    android:id="@+id/quietTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/seconds" />
            </LinearLayout>
-->
            <LinearLayout
                android:id="@+id/SensitivityGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sensitivity"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/sensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/sensitivity_options"
                    android:prompt="@string/Sensitivity_prompt" />

                <TextView
                    android:id="@+id/amps_volts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/a_v"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/isAutoSens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/auto_sens" />

            <CheckBox
                android:id="@+id/isFinalE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/enable_final_voltage" />

            <CheckBox
                android:id="@+id/isAuxSignalRecording"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/enable_auxiliary_signal_recording" />

            <LinearLayout
                android:id="@+id/ButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/goHome"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="close"
                    android:text="@string/go_home"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/finishAdvanced"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="verifyEntries"
                    android:text="@string/finish_setup"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>