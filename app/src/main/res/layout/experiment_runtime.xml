<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBBF8F0"
    android:orientation="vertical">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/paramsSet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/InitialVoltageGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/initial_voltage"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/initialVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/HiVGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hiV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/high_voltage"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/highVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LoVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/low_voltage"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lowVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FinVGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fiV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/final_voltage"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finalVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/PolarityGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/initial_polarity"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/polarity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ScanRateGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scanr8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/scan_rate"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/scanRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v_s"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SweepsGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sweepseg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sweep_segments"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sweepSegments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SampleIntGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sampint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sample_interval"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sampleInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/QuietTimeGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quiettime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/quiet_time"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/quietTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/secs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/seconds"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SensitivityGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sensit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sensitivity"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/loading"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/av"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/a_v"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/AutoSensGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/autoSensEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/auto_sens_is_enabled"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FinalEGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/finalEEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/final_voltage_is_enabled"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AuxRecordingGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auxRecordingEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/auxiliary_signal_recording_is_enabled"
                    android:textSize="14sp"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editParams"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="back"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/runExperiment"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/run"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/localSave"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="@string/save_locally"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/exportRes"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="@string/export"
                    android:textAllCaps="false"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>